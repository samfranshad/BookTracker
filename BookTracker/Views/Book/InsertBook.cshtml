@model Book
@{
    ViewData["Title"] = "Add Book";
}
<p class="title"><span class="fancy">Add a new book</span></p>

<div class="form">
@using (Html.BeginForm("InsertBookToDatabase", "Book", "Post"))
{
    <input asp-for="ID" type="hidden" value="" />

    <label asp-for="ISBN" class="control-label">ISBN</label>
    <input type="number" step="1" name="ISBN" class="form-control" />
    
    <label asp-for="Title" class="control-label">Title</label>
    <input type="text" name="Title" class="form-control" value="" />

    <label asp-for="Author" class="control-label">Author</label>
    <input type="text" name="Author" class="form-control" value="" />

    <label asp-for="YearPublished" class="control-label">Year Published</label>
    <input type="number" step="1" name="YearPublished" class="form-control" />

    <label asp-for="Genre" class="control-label">Genre</label>
    <input type="text" name="Genre" class="form-control" value="" />

    <label asp-for="Completed" class="control-label">Completed</label>
    <input type="text" name="Completed" class="form-control" value="" />

    <label asp-for="Description" class="control-label">Description</label>
    <textarea class="bigBox" rows="3" name="Description" class="form-control" value=""></textarea>


    <input type="submit" value="Add Book" class="button2 btn btn-primary" />
}
</div>